
<form action="/games/<%= game.id %>" method="PUT" id='put-form'>
  <div class="form-group">
    <p>Edit Name: <%= game.name %></p>
    <input type="text" class="form-control" name="name" placeholder="Name of Game...">
  </div>
  <div class="form-group">
    <p>Edit Description: <%= game.description %></p>
    <input type="text" class="form-control" name="descript" placeholder="Description...">
  </div>
  <input type="submit" class="btn btn-primary">
</form>
